with "../../config/shared";

project Libsparkcrypto is

   for Source_Dirs use
     ("../lsc/tmp/libsparkcrypto/src/ada/x86_64",
      "../lsc/tmp/libsparkcrypto/src/ada/generic",
      "../lsc/tmp/libsparkcrypto/src/ada/nullio",
      "../lsc/tmp/libsparkcrypto/src/shared/generic",
      "../lsc/tmp/libsparkcrypto/src/shared/little_endian");
   for Object_Dir use "../build/libsparkcrypto";

   package Compiler is
      for Default_Switches ("Ada") use Shared.Spark_Compiler_Switches & ("-gnatyN");
      for Local_Configuration_Pragmas use "contrib.adc";
   end Compiler;

end Libsparkcrypto;
