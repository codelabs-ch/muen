with "../common/defaults";

project Packer is

   for Source_Dirs use ("src", "../common/**");
   for Object_Dir use "obj";
   for Main use ("packer.adb");

   package Compiler is
      for Default_Switches ("Ada") use Defaults.Ada_Compiler_Switches
        & "-gnat05" & "-gnatwale";
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-E");
   end Binder;

end Packer;
