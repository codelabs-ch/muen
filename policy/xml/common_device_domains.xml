<include>
 <domain name="nic_domain">
  <memory>
   <mapSubjectMemory subject="nic_linux"/>
  </memory>
  <devices>
   <device logical="first_nic" physical="ethernet_controller_1"/>
   <device logical="additional_nics" physical="additional_nics"/>
  </devices>
 </domain>
 <domain name="storage_domain">
  <memory>
   <memory logical="dma1" physical="storage_linux|lowmem" virtualAddress="16#0002_0000#" writable="true" executable="false"/>
   <memory logical="dma2" physical="storage_linux|ram" virtualAddress="16#0100_0000#" writable="true" executable="false"/>
  </memory>
  <devices>
   <if variable="dbgserver_sink_xhcidbg" value="false">
    <device logical="xhci" physical="usb_controller_1"/>
   </if>
  </devices>
 </domain>
 <if variable="ahci_drv_active" value="true">
  <domain name="ahci_domain">
  <memory>
    <memory logical="dma" physical="ahci_dma" virtualAddress="16#a000_0000#" writable="true" executable="false"/>
    <memory logical="blockdev_AHCI_Shm1" physical="blockdev_AHCI_Shm1" virtualAddress="16#a100_0000#" writable="true" executable="false"/>
    <memory logical="blockdev_AHCI_Shm2" physical="blockdev_AHCI_Shm2" virtualAddress="16#a200_0000#" writable="true" executable="false"/>
  </memory>
  <devices>
   <device logical="storage_controller" physical="storage_controller"  mapReservedMemory="true"/>
  </devices>
 </domain>
 </if>
 <if variable="nvme_drv_active" value="true">
 <domain name="nvme_domain">
  <memory>
    <memory logical="NVME_Queue_Memory" physical="NVME_Queue_Memory" virtualAddress="16#4000_0000#" writable="true" executable="false"/>
    <memory logical="dma" physical="NVME_DMA_Region" virtualAddress="16#a000_0000#" writable="true" executable="false"/>
    <memory logical="blockdev_NVME_Shm1" physical="blockdev_NVME_Shm1" virtualAddress="16#a100_0000#" writable="true" executable="false"/>
    <memory logical="blockdev_NVME_Shm2" physical="blockdev_NVME_Shm2" virtualAddress="16#a200_0000#" writable="true" executable="false"/>
  </memory>
  <devices>
    <device logical="NVME_controller" physical="nvme_controller" mapReservedMemory="true"/>
  </devices>
 </domain>
 </if>
 <if variable="dbgserver_sink_xhcidbg" value="true">
  <domain name="usb_domain">
   <memory>
    <memory logical="dma1" physical="xhci_dma" virtualAddress="16#0100_0000#" writable="true" executable="false"/>
   </memory>
   <devices>
    <device logical="xhci" physical="usb_controller_1" mapReservedMemory="true"/>
   </devices>
  </domain>
 </if>
 <if variable="uefi_gop_rmrr_access" value="true">
  <domain name="uefi_gop">
   <devices>
    <device logical="vga" physical="vga_compatible_controller_1" mapReservedMemory="true"/>
   </devices>
  </domain>
 </if>
</include>
